/**app.wxss**/
page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.image_default {
  width: 25px;
  height: 25px;
}
.image_small {
  width: 20px;
  height: 20px;
}
.text_default {
  color: #333;
  font-size: 14px;
}
.text_min {
  color: #333;
  font-size: 12px;
}
.text_btn_default {
  color: #FFF;
  font-size: 16px;
 
}
/**
* 设置布局居中显示
*  在 display: flex; 下
*  align-items: center; 垂直居中
*  justify-content: center； 水平居中
**/
.view_v_h_center{ 
    display: flex;
    align-items: center;
    justify-content: center;
}
.view_content_center{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.view_root_content{
    width: 100%;
    height:100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.view_default_btn{
  width: 80%;
  height: 40px;
  background-color: #e78513;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40px;
  color: #FFF;
  
}
.view_horizontal {
    flex: 1;
    height: 40px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: white;
    padding-left: 20px;
    padding-right: 20px;
    
}
.view_h_center{
    height: 40px;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    text-align: center;
}
.view_line{
    width: 100%;
    height: 1px;
    background-color: #E2E2E3;
}