.scanner {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
  background-color: #333;
}

.scanner .canvas {
  flex: 1;
  width: 100%;
}

.scanner .buttons {
  display: flex;
  width: 100%;
  height: 120rpx;
  color: #4f6bf0;
  line-height: 120rpx;
  background-color: black;
  justify-content: space-around;
  position: absolute;
  bottom: 0;
  left: 0;
}

.buttons .choose, .buttons .confirm {
  flex: 1;
  text-align: center;
}
