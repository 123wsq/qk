/* pages/tab/Page_Business_Accept/Page_Business_Accept.wxss */

.root_view{
    background-color: #FFF;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.accept_camera {
  height: 50px;
  width: 80%;
  background-color: #f4c322;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}
.accept_camera_capacity {
  height: 50px;
  width: 80%;
  background-color: #fff;
  border-radius: 5px;
  border: 1px solid #f4c322;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}

.about_item{
  width: 100%;
  height: 40px;
  flex: 1;
  background-color: rgba(228, 228, 228, 1);
  margin-bottom: 10px;
  margin-left: 20px;
  margin-right: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.image_camera {
  width: 30px;
  height: 30px;
}
.image_text{
  font-size: 14px;
  margin-top: 10px;
}
.background_style{
    width: 100%;
    background-color: #FFF;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}



.btn_text {
  height: 50px;
  border: 1px solid #f4c322;
  border-radius: 5px;
  font-size: 16px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left:20px;
}