.showModule {
/* 用样式控制隐藏 visibility: hidden;*//* flex 布局 */
display: flex;
justify-content: center;
align-items: center;
/* 生成绝对定位的元素，相对于浏览器窗口进行定位 */
position: fixed;
/* 如果 height,width 不变的情况下，left,top 不用修改 */
left: 50%;
bottom: 50%;
height: 10vh;
width: 50vw;
/* 不透明 */
opacity:1;
background-color: #3B3B3B;
/* 圆角 */
border-radius: 30rpx;
z-index: 3001; 
}

.view_item{
    display: flex;
    width: 100%;
    height: 70px;
    flex-direction: column;
    justify-content: center;
    position: relative;
    left:0;
    top:0;
    
     
}
.view_item_top{
    position: absolute;
    width: 100%;
    height: 69px;
    left: 0;
    top: 0;
    z-index: 200;
    background-color: #FFF;
    display: flex;
    flex-direction: row;
    align-items: center;

}
.view_item_down{
    position: absolute;
    display: flex;
    flex-direction: row;
    height: 69px;
    right: 0;
    top:0;
    z-index: 100;
    
}
.showIndex {
    width: 70px;
    height: 70px;
    /* background: rgba(0,0,0,.3); */
    background-color: #f3be22;
    border-radius:50%;
    line-height: 70px;
    text-align: center;
    font-size:9vw;
    margin: auto;
    position: absolute;
    top: 0;left: 0;bottom: 0;right: 0;
    z-index: 999;   
    color: #FFF;
}